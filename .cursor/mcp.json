{
	"mcpServers": {
		"shopify-dev-mcp": {
			"command": "npx",
			"args": ["-y", "@shopify/dev-mcp@latest"],
			"env": {
				"OPT_OUT_INSTRUMENTATION": "true",
				"POLARIS_UNIFIED": "true",
        "SHOPIFY_FLAG_STORE_DEV_DOCS": "true"
			}
		},
		"postgres-mcp": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-postgres",
				"postgresql://till@localhost:5432/shopify_hotwire_template_development"
			],
			"name": "postgres",
			"enabled": true
		},
		"tidewave": {
			"url": "http://localhost:3000/tidewave/mcp"
		}
	}
}
