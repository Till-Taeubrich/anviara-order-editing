<s-page heading="Settings" inlineSize="small">
  <s-section heading="Order editing window">
    <s-text>
      Set how long customers can edit their shipping address after placing an order.
      Fulfillment is placed on hold during this window to allow address changes.
    </s-text>

    <%= form_with model: @settings, url: settings_page_path, method: :patch do |form| %>
      <s-box paddingBlockStart="base">
        <s-select
          label="Editing window"
          name="settings[hold_duration_minutes]"
          value="<%= @settings.hold_duration_minutes %>"
        >
          <% Settings.hold_duration_options_for_select.each do |label, value| %>
            <s-option value="<%= value %>" <%= 'selected' if value == @settings.hold_duration_minutes %>><%= label %></s-option>
          <% end %>
        </s-select>
      </s-box>

      <s-box paddingBlockStart="base">
        <s-button variant="primary" type="submit">Save</s-button>
      </s-box>
    <% end %>
  </s-section>
</s-page>
